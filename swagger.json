    "components": {
        "schemas": {
            "GeneralSchema": {
                "type": "object",
                "required": ["message"],
                "properties": {
                    "message": {
                        "type": "string"
                    }
                }
            },
            "GeneralErrorSchema": {
                "type": "object",
                "required": ["error"],
                "properties": {
                    "error": {
                        "type": "string"
                    }
                }
            },
            "UserReference": {
                "type": "string",
                "maxLength": 100
            },
            "Job": {
                "type": "object",
                "required": [
                    "title",
                    "description",
                    "posted_by",
                    "contact_email",
                    "company",
                    "country",
                    "region",
                    "city",
                    "job_type",
                    "job_tags",
                    "deadline"
                ],
                "properties": {
                    "job_id": {
                        "type": "number"
                    },
                    "title": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "description": {
                        "type": "string"
                    },
                    "requirements": {
                        "type": "string"
                    },
                    "posted_by": {
                        "$ref": "#/components/schemas/UserReference"
                    },
                    "contact_email": {
                        "type": "string",
                        "format": "email"
                    },
                    "company": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "country": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "region": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "city": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "job_type": {
                        "type": "string",
                        "enum": ["BOARD_POSITION", "REGULAR_JOB"]
                    },
                    "job_status": {
                        "type": "string",
                        "enum": ["OPEN", "CLOSED"]
                    },
                    "job_tags": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": ["SOFTWARE", "FINANCE", "LAW"]
                        }
                    },
                    "salary": {
                        "type": "number"
                    },
                    "deadline": {
                        "type": "number"
                    },
                    "created_on": {
                        "type": "number"
                    },
                    "updated_on": {
                        "type": "number"
                    }
                }
            },
            "Jobs": {
                "type": "object",
                "required": [
                    "jobs",
                    "count"
                ],
                "properties": {
                    "jobs": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Job"
                        }
                    },
                    "count": {
                        "type": "integer"
                    }
                }
            },
            "JobApplication": {
                "type": "object",
                "required": [
                    "job_id",
                    "applicant_id",
                    "job_application_status",
                    "documents",
                    "created_on",
                    "updated_on"
                ],
                "properties": {
                    "job_application_id": {
                        "type": "number"
                    },
                    "job_id": {
                        "type":"number"
                    },
                    "applicant_id": {
                        "$ref": "#/components/schemas/UserReference"
                    },
                    "job_application_status": {
                        "type": "string",
                        "enum": ["SUBMIT", "REVIEW", "OFFER_EXTEND", "OFFER_ACCEPT", "OFFER_REJECT"]
                    },
                    "documents": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "created_on": {
                        "type": "number"
                    },
                    "updated_on": {
                        "type": "number"
                    }
                }
            },
            "JobApplications": {
                "type": "object",
                "required": [
                    "job_applications",
                    "count"
                ],
                "properties": {
                    "job_applications": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/JobApplication"
                        }
                    },
                    "count": {
                        "type": "integer"
                    }
                }
            },
            "Chat": {
                "type": "object",
                "required": [
                    "date",
                    "chat_type",
                    "description",
                    "credits",
                    "chat_status",
                    "senior_executive",
                    "created_on",
                    "updated_on"
                ],
                "properties": {
                    "chat_id": {
                        "type": "number"
                    },
                    "date": {
                        "type": "number"
                    },
                    "chat_type": {
                        "type": "string",
                        "enum": ["ONE_ON_ONE", "ONE_ON_FOUR"]
                    },
                    "description": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "credits": {
                        "type": "number"
                    },
                    "chat_status": {
                        "type": "string",
                        "enum": ["PENDING", "DONE", "CANCELED"]
                    },
                    "aspiring_professionals": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/UserReference"
                        }
                    },
                    "senior_executive": {
                        "$ref": "#/components/schemas/UserReference"
                    },
                    "created_on": {
                        "type": "number"
                    },
                    "updated_on": {
                        "type": "number"
                    }
                }
            },
            "Chats": {
                "type": "object",
                "required": [
                    "chats",
                    "count"
                ],
                "properties": {
                    "chats": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Chat"
                        }
                    },
                    "count": {
                        "type": "integer"
                    }
                }
            }
        },
        "responses": {
            "GeneralResponse": {
                "description": "General Response",
